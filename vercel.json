{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "^/assets/(.*)",
            "dest": "/assets/$1"
        },
        {
            "src": "^/api/(.*)",
            "dest": "/api/$1"
        },
        {
            "src": ".*",
            "dest": "/index.html"
        }
    ],
    "env": {
        "VITE_APP_TITLE": "TherapyTrain AI",
        "VITE_APP_ENV": "production"
    }
}