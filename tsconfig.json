{
  "compilerOptions": {
    "target": "ES2020",
    "module": "preserve",
    "lib": [
      "dom",
      "es2020"
    ],
    "outDir": "./dist",
    "rootDir": "..",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "jsx": "react",
    "baseUrl": "..",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["node"]
  },
  "include": ["src/**/*", "../src/types/**/*"],
  "exclude": ["node_modules", "dist"]
}
