# Frontend Environment Variables
VITE_API_URL=http://localhost:3000/api
VITE_KINDE_REDIRECT_URL=http://localhost:5173/auth/callback
VITE_KINDE_CLIENT_ID=your_kinde_client_id
VITE_KINDE_CLIENT_SECRET=your_kinde_client_secret
VITE_KINDE_ISSUER_URL=https://your_kinde_domain.kinde.com
VITE_KINDE_POST_LOGIN_REDIRECT_URL=http://localhost:5173/dashboard
VITE_KINDE_POST_LOGOUT_REDIRECT_URL=http://localhost:5173

# Backend Environment Variables
PORT=3000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/therapytrain?retryWrites=true&w=majority

# Kinde Auth Configuration
KINDE_DOMAIN=https://your_kinde_domain.kinde.com
KINDE_CLIENT_ID=your_kinde_client_id
KINDE_CLIENT_SECRET=your_kinde_client_secret
KINDE_REDIRECT_URL=http://localhost:3000/api/auth/callback
KINDE_POST_LOGIN_REDIRECT_URL=http://localhost:5173/dashboard
KINDE_POST_LOGOUT_REDIRECT_URL=http://localhost:5173

# Security
JWT_SECRET=your_jwt_secret_key
CORS_ORIGIN=http://localhost:5173

# Optional Features
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
